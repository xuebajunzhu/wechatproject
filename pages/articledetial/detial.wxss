/* pages/articledetial/detial.wxss */
.author{
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
}

.authorinfo image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}
.authorinfo{
  display: flex;
  flex-direction: row;
}
.authorinfo .name{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 0 20rpx;
}

.author .care{
  border: 2rpx solid aqua;
  border-radius: 20rpx;
  height: 50rpx;
  width: 100rpx;
  text-align:center;
}
.content{
  margin: 20rpx;
}
.topic{
   margin: 50rpx 20rpx;
}
.watch{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx 50rpx;
}

.watch .watch-counter image{
  width: 25rpx;
  height: 25rpx;
}
.watch .watch-counter{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.comment_count{
  margin: 20rpx;
}

.commentList image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 20rpx;
}

.commentList .boder{
  height: 2rpx;
  background-color: #bbb;
}

.commentList{
  display: flex;
  flex-direction: row;
}

.commentList .comment{
  /* display: flex;
  flex-direction: column; */
  margin: 20rpx;
  width: 600rpx;
}
.commentList .comment .comment_head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}
.commentList .comment .comment_head .commentor_info{
   display: flex;
  flex-direction: column;
}
.commentList .comment .comment_head .operation{
  display: flex;
  flex-direction: row;
}
.commentList .comment .comment_head .operation image{
  height: 20rpx;
  width: 20rpx;
}
.comment_data{
  font-size: 20rpx;
}
.commentList .operation{
  font-size: 30rpx;
}
.replyList .comment{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  width: auto;
}
.replyList .comment .comment_head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}
.replyList .comment .comment_head .commentor_info{
  display: flex;
  flex-direction: column;
}
.replyList .comment .comment_head .operation{
  display: flex;
  flex-direction: row;
}
.replyList .comment_head .commenter-avatarUrl{
  display: felx;
  flex-direction: row;
  justify-content: space-around;
  background-color: red;
  margin-left:0; 
}

.replyList{
  background-color: #808080;
}

.text-input{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.text-input image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}

.text-input input {
  border: 1rpx solid #ddd;
  background-color: #f5f5f5;
  width: 575rpx;
  padding: 10rpx;
  border-radius: 20rpx;
}

.big-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.small-avatar {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.buttom-view {
  border-top: 1px solid #ddd;
  background-color: white;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 40rpx;
}

.buttom-view .text-input {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.buttom-view .text-input input {
  border: 1rpx solid #ddd;
  background-color: #f5f5f5;
  width: 575rpx;
  padding: 10rpx;
  border-radius: 20rpx;
}


.buttom-view .comment-area{
  position: relative;
}

.buttom-view .comment-area .top{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 10rpx;
}
.buttom-view .comment-area .reply{
  margin-left: 30rpx;
  font-size: 25rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ddd;
  border-radius: 10rpx;
}

.buttom-view .comment-area .reply icon{
  padding: 0 8rpx;
}

.buttom-view .comment-area textarea{
  border: 1rpx solid #ddd;
  width: 628rpx;
  padding: 20rpx;
}

.buttom-view .btn{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 10rpx 0;
}

.buttom-view .btn .publish{
  padding: 10rpx 20rpx;
  background-color: #00c8b6;
  color: white;
  border-radius: 10rpx;
}

.buttom-view .comment-area .hide{
  position: absolute;
  right: 0;
  top: -20rpx;
}
